<body class="login-body">

    <header class="container d-flex justify-content-center align-items-center">
        <nav>
          <a href="/" style="text-decoration: none;"><h1 class="landing-title pt-4 my-3">Fellowship of the Code</h1></a>
        </nav>
    </header>

    <main class="container login-main">
      <form action="/login" method="post" id="loginForm">

        <% if (requiredError) { %>
          <div class="alert alert-danger">
              <%= requiredError %>
          </div>
        <% } %>

        <% if (usernameError) { %>
          <div class="alert alert-danger">
              <%= usernameError %>
          </div>
        <% } %>

        <% if (passwordError) { %>
          <div class="alert alert-danger">
              <%= passwordError %>
          </div>
        <% } %>

        <section class="mb-2">
          <label for="username" class="form-label">
            gebruikersnaam<span class="required">*</span>
          </label>
          <input name="username" type="text" class="form-control rounded" id="username">
        </section>

        <section class="mb-3">
          <label for="password" class="form-label">
            wachtwoord<span class="required">*</span>
          </label>
          <input name="password" type="password" class="form-control rounded" id="password">
        </section>

        <section class="mb-3">
          <input type="checkbox" class="form-check-input" id="remember-me">
          <label class="form-check-label" for="rememberMe">remember me</label>
        </section>

        <section class="mb-2">
          <button type="submit" class="btn bg-body-tertiary border-dark rounded">aanmelden</button>
        </section>

        <a id="forgot-password" href="/forgotpassword" class="text-decoration-none">
          wachtwoord vergeten?
        </a>

  
        <p style="margin: 0;">nog geen account? 
          <a href="/register" id="showCreateAccountBtn" class="btn-link" style="cursor: pointer;">account aanmaken</a>
        </p>
      </form>
    </main>

