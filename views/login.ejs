<body class="login-body">

    <header class="container-fluid d-flex justify-content-center align-items-center">
        <nav>
          <a href="/" style="text-decoration: none;"><h1 class="landing-title pt-4 my-3">Fellowship of the Code</h1></a>
        </nav>
      </header>

    <main class="container login-main">
        <form action="/login" method="post" id="loginForm">

            <div id="loginErrorMessage" class="text-danger mb-3"></div>
  
            <div class="mb-3">
              <label for="username" class="form-label">gebruikersnaam<span class="required">*</span></label>
              <input name="username" type="text" class="form-control" id="username" required>
            </div>
            <div class="mb-3 position-relative">
              <label for="password" class="form-label">wachtwoord<span class="required">*</span></label>
              <div class="input-group">
                  <input name="password" type="password" class="form-control rounded" id="password" required>
                  <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                      <i class="bi bi-eye-slash"></i>
                  </button>
              </div>
            </div>
  
            <div class="d-flex justify-content-between">
              <div class="mb-3">
                <!-- <input type="checkbox" class="form-check-input" id="rememberMe">
                <label class="form-check-label" for="rememberMe">onthoud mij</label> -->
                <button type="submit" class="btn bg-body-tertiary border-dark mb-1">aanmelden</button>
              </div>
              <a id="forgot-password" href="#" class="text-decoration-none">wachtwoord vergeten?</a>
            </div>
      
              <p style="margin: 0;">nog geen account? 
                <span id="showCreateAccountBtn" class="btn-link" style="cursor: pointer;">account aanmaken</span>
              </p>
        </form>
    </main>

