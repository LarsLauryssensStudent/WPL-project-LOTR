<!DOCTYPE html>
<html lang="nl-BE">

<%- include("partials/header") %>

    <main class="container-fluid quizzMain">


        <section class="col-sm-12 col-lg-8 col-md-10 ">
            <section class="quizzContainer w-100">
                <section class="quizzNav container-fluid">
                    <h1 class="mx-auto" style="font-size: 1.6rem; letter-spacing: 0.2rem; padding-top: 8px;">
                        Favorites</h1> <a href="/Favorites/toFile">Print</a>
                </section>
                <section class="card biggerCardBlacklist align-items-center my-0 mx-0 w-100 blacklistmain">

                    <ul class="list-unstyled overFlowerList">
                        <% if (favorites.length> 0) { %>
                            <% favorites.forEach(fav=> { %>
                                <li class="my-2">
                                    <blockquote class="my-0">
                                        <%= fav.dialog %>
                                    </blockquote>
                                    <cite>
                                        <a href="<%= characters.find(char=> char.id === fav.character).wikiUrl %>"
                                            class="nav-link">
                                            <%= characters.find(char=> char.id === fav.character).name %>
                                        </a>
                                    </cite>
                                    <a href="/Favorites/<%= fav.id %>/Remove"><span class="bi bi-trash"></span></a>
                                    <a href="/quotes/favorites/<%= fav.character %>" class="nav-link">All quotes</a>
                                </li>
                                <% }) %>
                                    <% } else { %>
                                        <li>
                                            <h1 class="my-2 text-center">Niets in favorieten!</h1>
                                        </li>
                                        <% } %>
                    </ul>

                </section>



            </section>
        </section>

    </main>
    <%- include("partials/footer") %>
        </body>

</html>