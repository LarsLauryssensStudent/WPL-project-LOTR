<body class="register-body">

    <header class="container-fluid d-flex justify-content-center align-items-center">
        <nav>
          <h1 class="landing-title pt-4 my-3">Fellowship of the Code</h1>
        </nav>
    </header>

    <main class="container login-main">
        <form action="/register" method="post" id="loginForm">

            <div id="loginErrorMessage" class="text-danger mb-3"></div>
  
            <section class="mb-3">
              <label for="signupUsername" class="form-label">gebruikersnaam
                <span class="required">*</span></label>
              <input name="signupUsername" type="text" class="form-control" id="signupUsername">
            </section>
  
            <section class="mb-3">
              <label for="signupEmail" class="form-label">e-mailadres
                <span class="required">*</span></label>
              <input name="signupEmail" type="email" class="form-control" id="signupEmail">
            </section>

            <section class="mb-3">
              <label for="signupPassword" class="form-label">wachtwoord
                <span class="required">*</span></label>

              <section class="input-group">
                <input name="signupPassword" type="password" class="form-control rounded" id="signupPassword">
                <button class="btn btn-outline-secondary" type="button" id="toggleSignupPassword">
                  <i class="bi bi-eye-slash"></i>
                </button>
              </section>
  
              <section id="passwordStrength" class="text-muted mb-1" style="font-size: 0.8rem;">wachtwoordsterkte: 
                <span id="strengthLabel"></span>
              </section>
  
              <section class="progress mb-3">
                <section id="strengthBar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></section>
              </section>
  
              <section id="strengthLabel" class="form-text text-muted"></section>
  
              <label for="repeatPassword" class="form-label">
                herhaal wachtwoord<span class="required">*</span>
              </label>
  
              <section class="input-group">
                <input name="repeatPassword" type="password" class="form-control rounded" id="repeatPassword">

                <button class="btn btn-outline-secondary" type="button" id="toggleRepeatPassword">
                  <i class="bi bi-eye-slash"></i>
                </button>
              </section>
            </section>
      
            <button type="submit" class="btn bg-body-tertiary border-dark mb-3 SignupBtn">account aanmaken</button>
            <p style="margin: 0;">terug naar 
              <span id="backToLoginBtn" class="btn-link" style="cursor: pointer;">aanmelden</span>
            </p>
        </form>
    </main>

