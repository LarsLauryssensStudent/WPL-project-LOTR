<!DOCTYPE html>
<html lang="nl-BE">

<%- include("partials/header") %>

    <main class="container-fluid quizzMain">


        <section class="col-sm-12 col-lg-8 col-md-10 ">
            <section class="quizzContainer w-100">
                <section class="quizzNav container-fluid" style="position: relative;">
                    <h1 class="mx-auto navHeader " style="font-size: 1.6rem; letter-spacing: 0.2rem; padding-top: 8px;">
                        Blacklists</h1> 
                        <a href="/Favorites/toFile" style="position:absolute; right: 12px;"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                            <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5"/>
                            <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z"/>
                          </svg></a>
                </section>
                <section class="card biggerCardBlacklist align-items-center my-0 mx-0 w-100 blacklistmain">


                    <ul class="list-unstyled overFlowerList">
                        <% if (blacklisted.length> 0) { %>
                            <% blacklisted.forEach(bl=> { %>
                                <li class="my-2">
                                    <blockquote class="my-0">
                                        <%= bl.dialog %>
                                    </blockquote>
                                    <cite>
                                        <a href="<%= characters.find(char=> char.id === bl.character).wikiUrl %>"
                                            class="nav-link">
                                            <%= characters.find(char=> char.id === bl.character).name %>
                                    </cite>
                                    <a href="/Blacklist/<%= bl.id %>/Remove"><span class="bi bi-trash"></span></a>
                                    <a href="/quotes/blacklist/<%= bl.character %>" class="nav-link quoteLink" >Alle quotes van dit character.</a>
                                    <p>Reden: <%= bl.reason %>
                                    </p>
                                </li>
                                <% }) %>
                                    <% } else { %>
                                        <li>
                                            <h1 class="my-2 text-center">Niets in Blacklist!</h1>
                                        </li>
                                        <% } %>
                    </ul>


                </section>


            </section>


        </section>

    </main>
    </body>


    <%- include("partials/footer") %>

</html>